<section class="button"><%= link_to image_tag("add.png")+'新增文章', admin_news_index_path, :method => :post %> </section>
<!--button-->
<section class="list">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th align="left" class="x0 x2">日期</th>
      <th align="left">活動名稱</th>
      <th align="left" class="x0 x1">編輯</th>
      <th align="left" class="x1">刪除</th>
    </tr>
    
      <% @news.each do |news| %>
	    <tr>
	      <td class="x0"><%= news.date.to_s %></td>
	      <td>
	      	  <%= link_to news.name, admin_news_path(news) %>
	          <% if( news.status != 'enable') %>
	          <span>(尚未發佈到前台)</span>
	          <% end %>
          </td>
	      <td class="x0"><%= link_to image_tag("/images/edit.png"), edit_admin_news_path(news) %></td>
	      <td class="delete"><%= link_to image_tag("/images/delete.png"), admin_news_path(news), method: :delete, data: { confirm: '確定刪除消息?' } %></td>
	    </tr>
      <% end %>
      
  </table>
  <%= paginate @news, :theme => 'admin' %>
</section>
