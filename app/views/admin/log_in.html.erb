<!doctype html>
<html>
<head>
<!--[if lt IE 9]>
<script src="js/html5.js"></script>
<link rel="stylesheet" href="css/desktop.css">
<![endif]-->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
<meta name="Robots" content="index,follow"/>
<meta http-equiv="content-language" content="zh-TW" />
<title>漢杰後台管理系統</title>
<%= stylesheet_link_tag "admin/reset" %>

<%= stylesheet_link_tag "admin/default" %>
<%= stylesheet_link_tag "RWD/mobile", :media => "screen and (max-width: 543px)" %>
<%= stylesheet_link_tag "RWD/tablet", :media => "screen and (min-width: 544px) and (max-width: 896px)" %>
<%= stylesheet_link_tag "RWD/desktop", :media => "screen and (min-width: 897px)" %>

<%= stylesheet_link_tag "alertify" %>

<%= stylesheet_link_tag "admin/custom" %>


<%= javascript_include_tag "admin" %>
<script>

    <% if session[:notice] %>
	$(function() {
			Alertify.log.error("帳號密碼錯誤，請重新輸入");		
	});
    <% end %>
</script>
</head>

<body class="login">
<header _height="none">
  <section id="top"> <a id="nav-ctrl"><img src="<%= image_path("nav.png") %>"></a>
    <div class="left">
      <h1><a href="#">漢杰後台管理系統</a></h1>
    </div>
    <!--left-->
    <aside> <a id="aside-ctrl"><img src="<%= image_path("set.png") %>"></a>
      <div id="aside-box"> <a href="<%= root_url %>">返回首頁</a> </div>
    </aside>
  </section>
  <!--top--> 
</header>
<section id="main" _height="auto">
  <section id="vert">
    <article>
      <section class="hgroup">
        <h2><img src="<%= image_path("set.png") %>" width="16" height="16"> 登入</h2>
      </section>
      
      <%= form_for(@admin, :url => admin_loginCheck_path(@admin, :locale => I18n.locale)) do |f| %>
      
	      <!--hgroup-->
	      <section class="text text-edit">
	        <div class="one">
	          <table width="100%" border="0" cellspacing="0" cellpadding="0">
	            <tr>
	              <th valign="top">帳號</th>
	              <td><%= f.text_field :username, :autocomplete => "off" %></td>
	            </tr>
	          </table>
	        </div>
	        <div class="one">
	          <table width="100%" border="0" cellspacing="0" cellpadding="0">
	            <tr>
	              <th valign="top">密碼</th>
	              <td><%= f.password_field :password, :autocomplete => "off" %></td>
	            </tr>
	          </table>
	        </div>
	      </section>
      
      <% end %>
      <!--text-->
      <section class="button"> <a href="#" id="btnLogin"><img src="<%= image_path("log.png") %>">登入</a> </section>
      <!--button--> 
    </article>
  </section>
  <!--vert--> 
</section>
<!--main-->

<script type="text/javascript">
$("#btnLogin").click(function(){
  $("form").submit();
});

$("#admin_password").keydown(function(event){
  if (event.keyCode == 13){
    $("form").submit();
  }
});
</script>

<footer _height="none"> Copyright © <a href="http://www.summers.com.tw/" target="_blank">Summers</a> </footer>
</body>
</html>

